<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/_5sdp"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:background="@drawable/square_yellow_box"
        android:padding="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="6">

        <TextView
            android:id="@+id/tv_billingStage"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            android:text="Sr. No." />
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/black"/>

        <TextView
            android:layout_weight="1.4"
            android:id="@+id/tv_precentage"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            android:text="Percentage" />
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/black"/>


        <TextView
            android:id="@+id/tv_amount"
            android:padding="@dimen/_10sdp"
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:text="Amount" />
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/black"/>


        <TextView
            android:id="@+id/tv_paid"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Paid" />
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/black"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_balanced"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:text="Balance" />
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/black"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_remark"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:text="Remark" />


    </LinearLayout>

    <LinearLayout
        android:padding="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="6">

        <TextView
            android:id="@+id/tvt_billingStage"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            android:text="1" />
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/black"/>

        <TextView
            android:layout_weight="1.4"
            android:id="@+id/tvt_precentage"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            android:text="0%" />
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/black"/>


        <TextView
            android:id="@+id/tvt_amount"
            android:padding="@dimen/_10sdp"
            android:layout_weight="1.1"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:text="1000$" />
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/black"/>


        <TextView
            android:id="@+id/tvt_paid"
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="100$" />
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/black"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/tvt_balanced"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:text="900$" />
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/black"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/tvt_remark"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:text="On Processes" />


    </LinearLayout>

</LinearLayout>
</RelativeLayout>