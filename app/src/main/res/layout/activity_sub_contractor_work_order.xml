<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Sub Contractor"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <Spinner
        android:id="@+id/spr_sub_contractor_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <com.google.android.materialPurchase.tabs.TabLayout
        android:id="@+id/tabLayout_frgament"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#7367"
        >

        <com.google.android.materialPurchase.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Work_order" />

        <com.google.android.materialPurchase.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Billing Stages" />

    </com.google.android.materialPurchase.tabs.TabLayout>

    <FrameLayout
        android:id="@+id/frameLayout_fragemnt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>

