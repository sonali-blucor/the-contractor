<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_no_billing_list_item"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="0.4"
        android:background="@drawable/table_content_cell_bg"
        android:text="No."
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tv_percentage_billing_list_item"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="2.6"
        android:background="@drawable/table_content_cell_bg"
        android:text="Percentage"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tv_amount_billing_list_item"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="0.6"
        android:background="@drawable/table_content_cell_bg"
        android:text="@string/Amount"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tv_remark_billing_list_item"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="0.7"
        android:background="@drawable/table_content_cell_bg"
        android:text="@string/Remarks"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tv_billing_date_billing_list_item"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="0.5"
        android:background="@drawable/table_content_cell_bg"
        android:text="Billing Date"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/img_edit_billing_list_item"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/table_content_cell_bg"
        android:src="@drawable/ic_edit_yellow"/>

</LinearLayout>