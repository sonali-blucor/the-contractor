<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5dp"
    android:padding="@dimen/margin_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_5dp"
            android:text="Project 1"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_project_id"
            android:drawableLeft="@drawable/ic_project_id"
            android:drawablePadding="@dimen/drawable_padding"
            android:text="Project Id"
            android:textColor="@color/gray"
            app:drawableStartCompat="@drawable/ic_project_id"
            tools:ignore="UseCompatTextViewDrawableXml" />

        <TextView
            android:id="@+id/txt_item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_user"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="@dimen/drawable_padding"
            android:text="Client Name"
            android:textColor="@color/gray"
            app:drawableStartCompat="@drawable/ic_user"
            tools:ignore="UseCompatTextViewDrawableXml" />

        <TextView
            android:id="@+id/txt_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_schedule"
            android:drawableLeft="@drawable/ic_schedule"
            android:drawablePadding="@dimen/drawable_padding"
            android:textColor="@color/gray"
            app:drawableStartCompat="@drawable/ic_schedule"
            tools:ignore="UseCompatTextViewDrawableXml" />

        <TextView
            android:id="@+id/txt_item_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_m_material"
            android:drawableLeft="@drawable/ic_m_material"
            android:drawablePadding="@dimen/drawable_padding"
            android:text="Material"
            android:visibility="gone"
            android:textColor="@color/gray"
            app:drawableStartCompat="@drawable/ic_m_material"
            tools:ignore="UseCompatTextViewDrawableXml" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_5dp">

            <TextView
                android:id="@+id/txt_item_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_call_yellow"
                android:drawableLeft="@drawable/ic_call_yellow"
                android:drawablePadding="@dimen/drawable_padding"
                android:text="Client"
                android:gravity="left|center_vertical"
                android:visibility="invisible"
                android:textAllCaps="true"
                android:textColor="@color/yellow"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_call_yellow"
                tools:ignore="UseCompatTextViewDrawableXml" />

            <TextView
                android:id="@+id/txt_item_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="@dimen/drawable_padding"
                android:gravity="right|center_vertical"
                android:text="Know More"
                android:textAllCaps="true"
                android:textColor="@color/yellow"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>