<resources>

    <style name="Widget.Theme.TheContractor.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.TheContractor.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="AddressFormConatinerHalf">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">2</item>
    </style>

    <style name="AddressFormConatinerFull">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AddressFormConatiner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TVAddressForm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
        <item name="android:textSize">@dimen/margin_5dp</item>
    </style>


    <style name="ETAddressForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height_small</item>
        <item name="android:background">@drawable/edittext_round</item>
        <item name="android:drawablePadding">@dimen/fab_margin</item>
        <item name="android:paddingLeft">@dimen/fab_margin_half</item>
        <item name="android:paddingRight">@dimen/fab_margin_half</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin_half</item>
    </style>

    <style name="BtnWithIconLeftContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="BtnWithIconLeft">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">@dimen/fab_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:clickable">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <dimen name="button_height_small">40dp</dimen>
    <dimen name="fab_margin_half">8dp</dimen>
    <dimen name="button_height">42dp</dimen>
</resources>